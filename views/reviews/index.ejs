<%- include('../partials/header') %>

<h1>VegViews <img id="title-img" src="https://i.imgur.com/F34KrxA.png" alt="vegan logo"></h1>
<h3>Welcome to VegViews! Sometimes delicious vegan meals can be hard to find 😔<br> This is a place where you can explore and share your thoughts on meals you have tried or made.</h3>
<table id="list">
    <thead>
        <th class="list-title">Review Title</th>
        <th class="list-title">Opinion</th m>
        <th class="list-title">Rating</th>
    </thead>
    <tbody>
        <% reviews.forEach(function(r) { %>
            <tr id="review-row">
                <td id="title-td"><%= r.title %></td>
                <td id="opinion-td"><%= r.opinion %></td>
                <td id="rating-td"><%= r.rating %> 🧡</td>
                <td id="image-td"><img id="food-image"src="<%= r.image %>" alt="Food Image"></td>
                <td class="button-td">
                <% if ( r.author && r.author.equals(user && user._id)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" 
                    class="delete-form" method="POST">
                    <button type="submit">🗑</button>
                </form>
                </td>
            <td class="button-td">
                    <a href="/reviews/<%= r._id %>/edit">✏️</a>
            </td>
            <% } %>
                <td class="button-td"><a href="/reviews/<%= r._id %>">More</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>