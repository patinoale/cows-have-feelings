<%- include('../partials/header') %>
<table id="list">
    <thead>
        <th>Title</th>
        <th>Opinion</th>
        <th>Rating</th>
    </thead>
    <tbody>
        <% reviews.forEach(function(r) { %>
            <tr>
                <td><%= r.title %></td>
                <td><%= r.opinion %></td>
                <td><%= r.rating %>⭐️'s</td>
                <td><a href="/reviews/<%= r._id %>">DETAILS</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>