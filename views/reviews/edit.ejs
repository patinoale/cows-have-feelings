<%- include('../partials/header') %>


<form id="edit-form" action="/reviews/<%= review._id %>?_method=PUT" method="POST">
    <label>Title:
      <input type="text" name="title" value="<%= review.title %>">
    </label>
    <label>Link:
      <input type="text" name="link" value="<%= review.link  %>">
    <label>Rating:
    </label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>
    </label>
    <label>Image Link:
      <input type="text" name="image" value="<%= review.image %>">
    </label>
    <label>Opinion:
      <input type="text" name="opinion" value="<%= review.opinion %>">
    </label>
    <input type="submit" value="Save Review">
  </form>

<%- include('../partials/footer') %>